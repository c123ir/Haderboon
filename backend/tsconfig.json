    // backend/tsconfig.json
    {
        "compilerOptions": {
          "target": "es2017",
          "module": "commonjs",
          "lib": ["es2017"],
          "outDir": "./dist",
          "rootDir": "./src",
          "strict": true,
          "esModuleInterop": true,
          "skipLibCheck": true,
          "forceConsistentCasingInFileNames": true,
          "resolveJsonModule": true
        },
        "include": ["src/**/*.ts", "src/**/*.d.ts"],
        "exclude": ["node_modules", "dist"]
      }