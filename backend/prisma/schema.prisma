// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

// این بخش کلاینت پریزما را برای ما میسازد
generator client {
  provider = "prisma-client-js"
}

// این بخش اطلاعات اتصال به دیتابیس را مشخص میکند (فقط یک بار باید باشد)
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ===============================================
// مدل‌های داده پروژه هادربون
// ===============================================

model User {
  id        String    @id @default(cuid())
  email     String    @unique
  password  String
  name      String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  projects  Project[]
}

model Project {
  id            String    @id @default(cuid())
  name          String
  description   String?
  directoryPath String
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  userId        String
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
}